{
	"compilerOptions": {
		"outDir": "./dist/",
		"baseUrl": ".",
		"paths": { "*": ["./src/*"] },
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "es5",
		"jsx": "react-jsx",
		"allowJs": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},

  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
}
